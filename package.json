{
  "name": "wine-api",
  "version": "1.0.0",
  "description": "RESTful API for managing wines",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "mocha --exit --timeout 10000 'test/**/*.test.js'",
    "test:report": "mocha --exit --timeout 10000 --reporter mochawesome --reporter-options reportDir=docs/test,reportFilename=test-report 'test/**/*.test.js'",
    "test:coverage": "nyc --reporter=html --reporter=text --report-dir=docs/coverage npm test",
    "test:all": "nyc --reporter=html --reporter=text --report-dir=docs/coverage mocha --exit --timeout 10000 --reporter mochawesome --reporter-options reportDir=docs/test,reportFilename=test-report 'test/**/*.test.js'",
    "demo": "node test/demo/generate-demo.js",
    "lint": "eslint src test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.0",
    "restify": "^11.1.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.4",
    "nyc": "^17.1.0",
    "supertest": "^6.3.3"
  },
  "nyc": {
    "include": ["src/**/*.js"],
    "exclude": ["test/**/*.js"],
    "all": true
  }
}
